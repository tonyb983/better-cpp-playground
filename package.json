{
  "name": "pm-only",
  "version": "0.0.0",
  "description": "Managing my project with nodejs scripts!",
  "main": "scripts/index.js",
  "type": "module",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "timing:clear": "node scripts/clearTiming.js",
    "timing:collect": "node scripts/collectTimings.js",
    "timing:combine": "node scripts/combineTrace.js",
    "timing:all": "npm run timing:clear && npm run timing:collect && npm run timing:combine",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "github.com/tonyb983/cpp-playground"
  },
  "author": "Tony B. <tonyb983@gmail.com>",
  "license": "MPL-2.0",
  "dependencies": {
    "chai": "^4.3.6",
    "chalk": "5.0.0",
    "date-fns": "^2.28.0",
    "execa": "^6.0.0",
    "lodash": "^4.17.21",
    "microtime": "^3.0.0",
    "mocha": "^9.2.0",
    "object-hash": "^2.2.0",
    "rxjs": "^7.5.2"
  },
  "mocha": {
    "color": true,
    "diff": true,
    "extension": [
      "js",
      "cjs",
      "mjs"
    ],
    "package": "./package.json",
    "recursive": true,
    "reporter": "spec",
    "slow": "75",
    "spec": [
      "scripts/tests/**/*.spec.js"
    ],
    "timeout": "2000",
    "ui": "bdd",
    "watch-files": [
      "scripts/tests/**/*.js"
    ]
  }
}
